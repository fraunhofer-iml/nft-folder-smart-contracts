{
  "name": "@nft-folder/smart-contracts",
  "version": "1.0.0",
  "description": "Solidity smart contracts of the NFT Folder project",
  "author": {
    "name": "Fraunhofer Institute for Material Flow and Logistics",
    "url": "https://www.iml.fraunhofer.de/en.html",
    "email": "maximilian.austerjost@iml.fraunhofer.de"
  },
  "license": "OLFL-1.3",
  "homepage": "https://gitlab.cc-asp.fraunhofer.de/silicon-economy/base/blockchainbroker/ethereum/projects/nft-folder/smart-contracts/-/blob/main/README.md",
  "bugs": {
    "url": "https://gitlab.cc-asp.fraunhofer.de/silicon-economy/base/blockchainbroker/ethereum/projects/nft-folder/smart-contracts/-/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.cc-asp.fraunhofer.de/silicon-economy/base/blockchainbroker/ethereum/projects/nft-folder/smart-contracts"
  },
  "main": "hardhat.config.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "prepare": "husky",
    "blockchain-start": "npx hardhat node > /dev/null 2>&1 &",
    "blockchain-stop": "pkill -f 'smart-contracts/node_modules/.bin/hardhat'",
    "console-local": "npx hardhat console --network hardhat",
    "console-dev": "npx hardhat console --network dev",
    "clean": "rm -rf artifacts/ cache/ coverage/ typechain-types/ coverage.json",
    "compile": "npx hardhat compile",
    "clean-compile": "npm run clean && npm run compile",
    "test": "npx hardhat test",
    "test-trace": "npx hardhat test --trace",
    "coverage": "npx hardhat coverage",
    "contract-size": "npx hardhat contract-size",
    "token-export": "jq '.abi' artifacts/contracts/Token.sol/Token.json | xclip -selection clipboard",
    "token-size": "jq -r '.bytecode' artifacts/contracts/Token.sol/Token.json | wc -c",
    "token-deploy-local": "npx hardhat run --network localhost scripts/token.ts",
    "token-deploy-dev": "npx hardhat run --network dev scripts/token.ts",
    "container-deploy-local": "npx hardhat run --network localhost scripts/container.ts",
    "container-deploy-dev": "npx hardhat run --network dev scripts/container.ts",
    "eslint-check": "npx eslint './**/*.ts'",
    "eslint-fix": "npx eslint --fix './**/*.ts'",
    "prettier-check": "npx prettier --check 'contracts/**/*' 'scripts/*' 'test/**/*' ./*.*",
    "prettier-fix": "npx prettier --write 'contracts/**/*' 'scripts/*' 'test/**/*' ./*.*",
    "solhint": "npx solhint --max-warnings=0 --formatter=table 'contracts/**/*.sol'",
    "license-checker": "npm run license-checker-all && npm run license-checker-complementary && npm run license-checker-summary",
    "license-checker-all": "npx license-checker --unknown --csv --out=./third-party-licenses/third-party-licenses.csv",
    "license-checker-complementary": "npx license-checker --onlyunknown --csv --out=./third-party-licenses/third-party-licenses-complementary.csv",
    "license-checker-summary": "npx license-checker --unknown --summary --out=./third-party-licenses/third-party-licenses-summary.txt"
  },
  "lint-staged": {
    "package.json": [
      "npm run license-checker"
    ]
  },
  "dependencies": {
    "@openzeppelin/contracts": "5.0.2"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.5",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@^0.4.2",
    "@types/debug": "^4.1.12",
    "@types/lodash.isequal": "^4.5.8",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "chai": "4.4.1",
    "dotenv": "16.4.5",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-license-header": "0.6.1",
    "eslint-plugin-prettier": "5.1.3",
    "hardhat": "^2.22.6",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-tracer": "^3.1.0",
    "husky": "9.0.11",
    "license-checker": "25.0.1",
    "lint-staged": "15.2.7",
    "prettier": "3.3.2",
    "prettier-plugin-properties": "0.3.0",
    "prettier-plugin-solidity": "1.3.1",
    "solhint": "^5.0.1",
    "solhint-plugin-prettier": "^0.1.0"
  }
}
