{
  "name": "nft-folder-smart-contracts",
  "version": "1.0.0",
  "description": "Smart Contracts for the NFT Folder project",
  "author": {
    "name": "Fraunhofer Institute for Material Flow and Logistics",
    "url": "https://www.iml.fraunhofer.de/en.html",
    "email": "maximilian.austerjost@iml.fraunhofer.de"
  },
  "license": "OLFL-1.3",
  "homepage": "https://gitlab.cc-asp.fraunhofer.de/silicon-economy/base/blockchainbroker/ethereum/projects/nft-folder/smart-contracts/-/blob/main/README.md",
  "bugs": {
    "url": "https://gitlab.cc-asp.fraunhofer.de/silicon-economy/base/blockchainbroker/ethereum/projects/nft-folder/smart-contracts/-/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.cc-asp.fraunhofer.de/silicon-economy/base/blockchainbroker/ethereum/projects/nft-folder/smart-contracts"
  },
  "main": "hardhat.config.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "prepare": "husky",
    "blockchain:start": "npx hardhat node > /dev/null 2>&1 &",
    "blockchain:stop": "kill $(ps -ef | grep \"smart-contracts/node_modules/.bin/hardhat\" | awk '{print $2}' | head -n 1)",
    "clean": "rm -rf artifacts/ cache/ coverage/ ignition/deployments/chain-31337 / typechain-types/ coverage.json",
    "clean-install": "npm run clean; npm install",
    "compile": "npx hardhat compile",
    "clean-compile": "npm run clean-install && npm run compile",
    "test": "npx hardhat test",
    "test:cov": "npx hardhat coverage",
    "local:deploy-token": "npx hardhat ignition deploy ignition/modules/Token.ts --network hardhat",
    "local:deploy-container": "npx hardhat ignition deploy ignition/modules/Container.ts --network hardhat",
    "local:console": "npx hardhat console --network hardhat",
    "dev:deploy-token": "npx hardhat ignition deploy ignition/modules/Token.ts --network dev",
    "dev:deploy-container": "npx hardhat ignition deploy ignition/modules/Container.ts --network dev",
    "dev:console": "npx hardhat console --network dev",
    "show:token": "npx hardhat ignition visualize ./ignition/modules/Token.ts",
    "show:container": "npx hardhat ignition visualize ./ignition/modules/Container.ts",
    "eslint:check": "npx eslint './**/*.ts'",
    "eslint:fix": "npx eslint --fix './**/*.ts'",
    "prettier:check": "npx prettier --check 'contracts/**/*' 'ignition/modules/*' 'test/**/*' ./*.*",
    "prettier:fix": "npx prettier --write 'contracts/**/*' 'ignition/modules/*' 'test/**/*' ./*.*",
    "solhint": "npx solhint --max-warnings=0 --formatter=table 'contracts/**/*.sol'",
    "license-checker": "npm run license-checker:all && npm run license-checker:complementary && npm run license-checker:summary",
    "license-checker:all": "npx license-checker --unknown --csv --out=./third-party-licenses/third-party-licenses.csv",
    "license-checker:complementary": "npx license-checker --onlyunknown --csv --out=./third-party-licenses/third-party-licenses-complementary.csv",
    "license-checker:summary": "npx license-checker --unknown --summary --out=./third-party-licenses/third-party-licenses-summary.txt"
  },
  "lint-staged": {
    "package.json": [
      "npm run license-checker"
    ]
  },
  "dependencies": {
    "@openzeppelin/contracts": "4.8.1"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ignition-ethers": "0.13.2",
    "@nomicfoundation/hardhat-toolbox": "4.0.0",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@^0.4.1",
    "@types/debug": "^4.1.12",
    "@types/lodash.isequal": "^4.5.8",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "chai": "4.4.1",
    "dotenv": "16.4.1",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-license-header": "0.6.0",
    "eslint-plugin-prettier": "5.1.3",
    "ethers": "6.10.0",
    "hardhat": "2.19.5",
    "husky": "9.0.10",
    "license-checker": "25.0.1",
    "lint-staged": "15.2.2",
    "prettier": "3.2.5",
    "prettier-plugin-properties": "0.3.0",
    "prettier-plugin-solidity": "1.3.1",
    "solhint": "4.1.1",
    "solhint-plugin-prettier": "0.1.0"
  }
}
